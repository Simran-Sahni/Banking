<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stfrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FROM: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fromfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stbalance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance of Customer 1: "
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/balance1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stbalance2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance of Customer 2: "
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/balance2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMOUNT: "
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/amountentered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:hint="XXXX Rs"
            android:inputType="number"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>